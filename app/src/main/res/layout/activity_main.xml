<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seewo.videoviewtest.MainActivity">

    <com.seewo.videoviewtest.widget.media.IjkVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/btn_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changeSize"
        android:onClick="changeSize"/>
    <Button
        android:layout_below="@+id/btn_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换音轨"
        android:onClick="changeTrace"/>

</RelativeLayout>
